  <PropertyGroup>
    <TargetFramework>netcoreapp2.0</TargetFramework>
    <AssemblyName>Mpgp.RestApiServer</AssemblyName>
    <RootNamespace>Mpgp.RestApiServer</RootNamespace>
    <CodeAnalysisRuleSet>../../tools/Mpgp.ruleset</CodeAnalysisRuleSet>
